{
    "eslint.filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json"
    ],
    "eslint.packageManager": "yarn",
    "eslint.options": {
        "parser": "@typescript-eslint/parser"
    },
    "tsserver.log": "verbose",
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "Markdown",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "languageserver": {
        "haskell": {
            "command": "hie-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {}
            }
        }
    },
    "explorer.width": 42,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings": {
        "<cr>": [
            "expandable?",
            "expand",
            "open"
        ],
        "v": "open:vsplit"
    }
}