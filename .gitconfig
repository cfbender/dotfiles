[push]
	default = current
[pull]
	rebase = true
[alias]
	co = checkout
  dt = difftool
	st = status
	cm = commit -m
	pom = pull origin main
	ac = "!f() { git add -A && git commit -m \"$@\";}; f"
	acp = "!f() { git add -A && git commit -m \"$@\" && git push; }; f"
	fuck = "!f() { git add -A && git commit --amend --no-edit; }; f"
[diff]
	tool = meld
[merge]
	tool = meld
 	conflictstyle = diff3
[commit]
	gpgsign = true
[tag]
	gpgsign = true
